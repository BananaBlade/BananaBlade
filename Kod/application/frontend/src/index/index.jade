          |  Mirko Marković
        .player-track
          .player-track-title Violin Concerto No. 5: Tempo di minuetto
          .player-track-info
            .player-track-info-item.player-track-artist Wolfgang A. Mozart
            .player-track-info-item.player-track-album The Very Best of Mozart
            .player-track-info-item.player-track-year 2007
            .player-track-info-item.player-track-genre Klasična glazba
      audio#radio-player(src='media/paganini.mp3', preload='auto')
      .player-controls
        .control-buttons
          button.volume-button
            i.material-icons volume_down
