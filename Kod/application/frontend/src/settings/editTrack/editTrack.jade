.center-area(data-editable='false')
  header.center-header
    .view-path Korisnici > Uredi korisničke podatke
  .center-content
    header.content-header
      .content-header-left
        .content-header-title Podaci o korisniku
        .content-header-subtitle
          | Pregledajte i uredite
          | podatke korisnika ove radiopostaje. 
          b
            | Oprez! Promjene mogu
            | utjecati na korisnikovu mogućnost korištenja sustava.
      .content-header-right
        i.material-icons.icon account_box
    nav.content-options.uneditable-ui
      button Izmijeni podatke o korisniku
    .content-primary.content-form
      form
        fieldset(disabled='disabled')
          .form-line
            label(for='first_name') Ime
            input(type='text', name='first_name', value='Slavko', pattern='.{2,64}')
          .form-line
            label(for='last_name') Prezime
            input(type='text', name='last_name', value='Kovač', pattern='.{2,64}')
          .form-line
            label(for='email') E-mail adresa
            input(type='email', name='email', value='skovac@mail.com')
          .form-line
            label(for='year_of_birth') Godina rođenja
            input(type='number', name='year_of_birth', value='1986', min='1900', max='2100')
          .form-line
            label(for='occupation') Zanimanje
            input(type='text', name='occupation', value='keramičar', pattern='.{2,64}')
          .form-line
            label(for='account_type') Vrsta računa
            input.account-type-input(type='text', name='account_type', value='Administrator', disabled='disabled')
          .form-line.editable-ui
            .left-spacer
            button.raised.alt.right Odustani
            button.raised.left Spremi promjene
